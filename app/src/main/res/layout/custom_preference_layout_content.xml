<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:minHeight="60dp"
    android:background="@drawable/switch_background_ripple"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:id="@+id/custom_preference_description_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingEnd="4dp">

        <TextView
            android:id="@+id/custom_preference_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:paddingStart="10dp"
            android:text="Title Text" />

        <TextView
            android:id="@+id/custom_preference_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:text="Custom Preference Description" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/custom_preference_switch_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="end|center_vertical"
        android:minWidth="32dp"
        android:orientation="horizontal"
        android:paddingEnd="8dp"
        android:visibility="visible">

        <ImageView
            android:layout_width="@dimen/custom_preference_divider_width"
            android:layout_height="@dimen/custom_preference_divider_height"
            android:layout_gravity="center_vertical"
            android:background="#d4d4d4" />

        <Switch
            android:id="@+id/custom_preference_switch"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:focusable="false"
            android:paddingEnd="@dimen/custom_preference_switch_margin_end"
            android:paddingStart="@dimen/custom_preference_switch_margin_start" />
    </LinearLayout>

</LinearLayout>