<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="false"
    android:descendantFocusability="blocksDescendants"
    android:minHeight="?android:attr/listPreferredItemHeightSmall"
    android:paddingEnd="@dimen/app_list_item_padding"
    android:paddingStart="@dimen/app_list_item_padding">

    <CheckBox
        android:id="@+id/list_iv_switch"
        android:layout_width="@dimen/app_list_app_icon_size"
        android:layout_height="@dimen/app_list_app_icon_size"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/applock_list_item_inner_padding" />

    <ImageView
        android:id="@+id/list_iv_icon"
        android:layout_width="@dimen/app_list_app_icon_size"
        android:layout_height="@dimen/app_list_app_icon_size"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/app_list_icon_margin_end"
        android:layout_toEndOf="@id/list_iv_switch" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/applock_list_item_text_marginEnd"
        android:layout_marginStart="@dimen/applock_list_item_inner_padding"
        android:layout_toEndOf="@id/list_iv_icon"
        android:orientation="vertical"
        android:paddingBottom="11.75dp"
        android:paddingTop="11.75dp">


        <TextView
            android:id="@+id/list_tx_appname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sec-roboto-light"
            android:textAppearance="?android:attr/textAppearanceListItem"
            android:textColor="@android:color/black"
            android:textSize="@dimen/app_list_item_textsize" />

        <TextView
            android:id="@+id/list_tx_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sec-roboto-light"
            android:textAppearance="?android:attr/textAppearanceListItemSecondary"
            android:textColor="?android:attr/textColorSecondary"
            android:visibility="visible" />
    </LinearLayout>

</RelativeLayout>